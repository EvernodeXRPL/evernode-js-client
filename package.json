{
  "name": "evernode-js-client",
  "description": "Javascript client library for Evernode.",
  "keywords": [
    "Evernode"
  ],
  "homepage": "https://github.com/HotPocketDev/evernode-js-client",
  "license": "MIT",
  "version": "0.6.21-definition-1.6",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/**/*.js",
    "build:scripts": "ncc build scripts/postinstall.js --minify -o dist/postinstall.js",
    "build": "npm run lint && npm run build:scripts && ncc build src/index.js -e elliptic -e xrpl -e ripple-address-codec -e ripple-binary-codec -e ripple-keypairs -o dist/ && cp -r resources dist/",
    "bundle": "npm run build && ./clean-pkg.sh",
    "publish": "npm run bundle && cp npm-readme.md dist/README.md && npm publish --tag definition ./dist",
    "postinstall": "node scripts/postinstall.js"
  },
  "dependencies": {
    "elliptic": "6.5.4",
    "libsodium-wrappers": "0.7.10",
    "ripple-address-codec": "4.2.0",
    "ripple-keypairs": "1.1.0",
    "xrpl": "2.2.1",
    "xrpl-binary-codec": "1.4.2",
    "xrpl-accountlib": "2.2.0"
  },
  "devDependencies": {
    "eslint": "8.3.0"
  }
}